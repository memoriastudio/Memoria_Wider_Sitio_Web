---
import Layout from '../layouts/Layout.astro';
import Services from '../components/home/services.astro';
import BenefitsBento from '../components/home/BenefitsBento.astro';
import BenefitsEditing from '../docs/edition/benefts';
import '../styles/style.css';
import PricingEdition from '../components/pricing/PricingEdition.astro';
import BtnGetInspiration from '../components/ui/BtnGetInspiration.astro';
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Video Editing Service',
  provider: {
    '@type': 'Organization',
    name: 'Memoria Studio',
    url: 'https://memoriastudio.net',
  },
  description:
    'High-quality editing tailored to your style, pacing, and audience — from Shorts to long-form videos.',
};
const services = [
  {
    name: 'Footage Onboarding',
    description: 'Secure upload of your raw assets and alignment on style, pacing, and brand DNA.',
  },
  {
    name: 'Performance Editing',
    description:
      'Our team applies retention hooks and narrative pacing to transform your footage into a high-impact edit.',
  },
  {
    name: 'Review & Final Polish',
    description:
      'Collaborative feedback loop through our dashboard to ensure the result exceeds expectations.',
  },
];
---

<Layout
  description="From the minds at Memoria Studio — discover how we build, scale, and share creative systems."
  title="Editing · Memoria Wider"
  canonical="/edition"
>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <section class="px-4 py-6 sm:py-20">
    <div class="mx-auto max-w-2xl lg:max-w-7xl lg:px-4">
      <div class="grid-cols-reverse grid gap-12 lg:grid-cols-2 lg:gap-12">
        <div class="order-2 flex flex-col gap-10 md:order-1">
          <div class="space-y-8 text-center sm:space-y-6 md:text-left">
            <h1 class="text-5xl font-bold md:text-6xl">High-Retention Editing</h1>
            <h2 class="text-2xl font-medium tracking-tight md:text-3xl">
              Visual authority designed for maximum watch time.
            </h2>
            <div
              class="flex flex-col items-center space-y-6 text-center md:items-start md:text-left"
            >
              <p class="text-md text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
                Backed by years of expertise in the digital landscape, we engineer every second of
                your video to maximize engagement. .
              </p>
              <p class="text-md text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
                From high-impact Shorts to complex long-form narratives, our systems are built to
                turn viewers into loyal followers
              </p>
              <BtnGetInspiration href="/contact" />
            </div>
          </div>
        </div>
        <img
          class="order-1 mx-auto h-[400px] w-full rounded-3xl object-cover md:h-[500px] lg:order-2"
          width="476"
          height="500"
          src="/assets/editing_img.webp"
          alt="Our experts working together"
          fetchpriority="high"
          loading="eager"
        />
      </div>
    </div>
  </section>
  <BenefitsBento title="What You Can Get" items={BenefitsEditing} />
  <PricingEdition />
  <Services services={services} title="How It Works: The Methodology" />
</Layout>
