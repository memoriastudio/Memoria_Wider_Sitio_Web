---
import Layout from '../layouts/Layout.astro';
import PricingInspirational from '../components/pricing/PricingInspirational.astro';
import Services from '../components/home/services.astro';
import BenefitsBento from '../components/home/BenefitsBento.astro';
import BenefitsEditing from '../docs/edition/benefts';
import '../styles/style.css';
import PricingEdition from '../components/pricing/PricingEdition.astro';
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Video Editing Service',
  provider: {
    '@type': 'Organization',
    name: 'Memoria Studio',
    url: 'https://memoriastudio.net',
  },
  description:
    'High-quality editing tailored to your style, pacing, and audience — from Shorts to long-form videos.',
};
---

<Layout
  description="From the minds at Memoria Studio — discover how we build, scale, and share creative systems."
  title="Editing · Memoria Wider"
  canonical="/edition"
>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <section class="px-4 py-6 sm:py-20">
    <div class="mx-auto max-w-2xl lg:max-w-7xl lg:px-4">
      <div class="grid-cols-reverse grid gap-12 lg:grid-cols-2 lg:gap-12">
        <div class="order-2 flex flex-col gap-10 md:order-1">
          <div class="space-y-8 text-center sm:space-y-6 md:text-left">
            <h1 class="text-6xl font-semibold">Editing</h1>
            <h2 class="text-3xl font-medium tracking-tight sm:text-xl">
              High-quality editing tailored to your style, your pacing, and your audience — from
              Shorts to long-form videos.
            </h2>
            <div
              class="flex flex-col items-center space-y-6 text-center md:items-start md:text-left"
            >
              <p class="text-base text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
                Our editing service transforms your footage into polished, engaging videos built for
                performance.
              </p>
              <p class="text-base text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
                Whether you need Shorts, long-form videos, or repurposed content, our team adapts to
                your tone, narrative, and style.
              </p>
              <p class="text-base text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
                We focus on clarity, pacing, retention, and visual identity — and for creators
                looking to elevate their production, we also offer optional CGI and visual upgrades.
              </p>
              <a
                href="/contact"
                class="button-send flex w-40 items-center justify-center rounded-lg bg-primary-400 px-4 py-2 text-lg font-medium capitalize text-primary-950 transition hover:bg-primary-500/80 dark:bg-primary-700/80 dark:text-primary-200 dark:hover:bg-primary-600/80"
              >
                <div class="svg-wrapper-1">
                  <div class="svg-wrapper">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      width="24"
                      height="24"
                    >
                      <path fill="none" d="M0 0h24v24H0z"></path>
                      <path
                        fill="currentColor"
                        d="M1.946 9.315c-.522-.174-.527-.455.01-.634l19.087-6.362c.529-.176.832.12.684.638l-5.454 19.086c-.15.529-.455.547-.679.045L12 14l6-8-8 6-8.054-2.685z"
                      ></path>
                    </svg>
                  </div>
                </div>
                <span>Contact</span>
              </a>
            </div>
          </div>
        </div>
        <img
          class="order-1 mx-auto h-[400px] w-full rounded-3xl object-cover md:h-[600px] lg:order-2"
          width="476"
          height="600"
          src="/assets/editing_img.webp"
          alt="Our experts working together"
          fetchpriority="high"
          loading="eager"
        />
      </div>
    </div>
  </section>
  <BenefitsBento title="What You Can Get" items={BenefitsEditing} />
  <PricingEdition />
  <Services />
</Layout>
