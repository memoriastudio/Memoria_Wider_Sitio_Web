---
import Layout from '../layouts/Layout.astro';
import BenefitsReutilizable from '../components/home/BenefitsReutilizable.astro';
import PricingInspirational from '../components/pricing/PricingInspirational.astro';
import Services from '../components/home/services.astro';
import BenefitsBento from '../components/home/BenefitsBento.astro';

const editingServices = [
  {
    name: 'Shorts Editing',
    description: 'Clean, fast-paced edits crafted to maximize retention in under 60 seconds.',
    colorClass: 'bg-primary-500/[0.05] dark:bg-primary-400/[0.05]',
  },
  {
    name: 'Long-Form Editing',
    description:
      'Full-length videos with narrative structure, pacing, and a clear storytelling arc.',
    colorClass: 'bg-primary-500/[0.15] dark:bg-primary-400/[0.15]',
  },
  {
    name: 'Shorts from Long Videos',
    description:
      'We detect highlight moments or narrative beats and convert them into impactful Shorts.',
    colorClass: 'bg-primary-500/[0.10] dark:bg-primary-400/[0.10]',
  },
  {
    name: 'Shorts With Intent',
    description: 'Shorts designed from scratch — built to perform, not extracted.',
    colorClass: 'bg-primary-500/[0.20] dark:bg-primary-400/[0.20]',
  },
  {
    name: 'Visual Consistency',
    description:
      'Brand-aligned editing that ensures every video shares a cohesive visual language, reinforcing your identity and making all content feel like part of the same creator universe.',
    colorClass: 'bg-primary-500/[0.05] dark:bg-primary-400/[0.05]',
  },
  {
    name: 'Premium Add-Ons (CGI & VFX)',
    description: 'High-impact visual elements to elevate your videos when needed.',
    colorClass: 'bg-primary-500/[0.15] dark:bg-primary-400/[0.15]',
  },
  {
    name: 'Pacing & Retention Optimization',
    description: 'Editing focused on keeping viewers engaged from start to finish.',
    colorClass: 'bg-primary-500/[0.10] dark:bg-primary-400/[0.10]',
  },
  {
    name: 'Clean Audio & Sound Design',
    description: 'Improved clarity, mixing, SFX, and appropriate transitions.',
    colorClass: 'bg-primary-500/[0.20] dark:bg-primary-400/[0.20]',
  },
  {
    name: 'Color & Visual Identity',
    description: 'Color correction and visual design aligned with your brand tone, creating a distinctive and recognizable look across all your content.',
    colorClass: 'bg-primary-500/[0.05] dark:bg-primary-400/[0.05]',
  },
  {
    name: 'Narrative Structure',
    description: 'For long-form videos: we structure the story, the beats, and the hooks.',
    colorClass: 'bg-primary-500/[0.15] dark:bg-primary-400/[0.15]',
  },
  {
    name: 'Platform-Optimized Exports',
    description: 'Edits tailored for YouTube, TikTok, Reels, or multi-platform.',
    colorClass: 'bg-primary-500/[0.10] dark:bg-primary-400/[0.10]',
  },
  {
    name: 'Reliable Turnaround',
    description: 'Consistent delivery times you can plan your content around.',
    colorClass: 'bg-primary-500/[0.20] dark:bg-primary-400/[0.20]',
  },
];
---

<Layout
  description="From the minds at Memoria Studio — discover how we build, scale, and share creative systems."
  title="Editing · Memoria Wider"
>
  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-2xl px-2 sm:px-6 lg:max-w-7xl lg:px-4">
      <div class="grid gap-12 lg:grid-cols-2 lg:gap-12">
        <div class="flex flex-col gap-10">
          <div class="space-y-8 sm:space-y-6">
            <h1 class="text-6xl font-semibold">Editing</h1>
            <h2 class="text-3xl font-medium tracking-tight sm:text-xl">
              High-quality editing tailored to your style, your pacing, and your audience — from
              Shorts to long-form videos.
            </h2>
            <div class="space-y-6">
              <p class="text-base text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
                Our editing service transforms your footage into polished, engaging videos built for
                performance.
              </p>
              <p class="text-base text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
                Whether you need Shorts, long-form videos, or repurposed content, our team adapts to
                your tone, narrative, and style.
              </p>
              <p class="text-base text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
                We focus on clarity, pacing, retention, and visual identity — and for creators
                looking to elevate their production, we also offer optional CGI and visual upgrades.
              </p>
            </div>
          </div>
        </div>
        <img
          class="mx-auto h-[400px] w-full rounded-3xl object-cover md:h-[600px]"
          width="476"
          height="600"
          src="/assets/pexels-muhammed-cetinkaya-470437330-17115912.jpg"
          alt="Our experts working together"
        />
      </div>
    </div>
  </section>
  <!-- <BenefitsReutilizable title="What You Can Get" items={editingServices} /> -->
  <BenefitsBento title="What You Can Get" items={editingServices} />
  <PricingInspirational />
  <Services />
</Layout>
