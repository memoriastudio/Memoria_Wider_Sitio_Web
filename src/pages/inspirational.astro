---
import Layout from '../layouts/Layout.astro';
import Inspiratiogrid from '../components/home/inspiratiogrid.astro';
import Services from '../components/home/services.astro';
import PricingInspirational from '../components/pricing/PricingInspirational.astro';
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Inspirational Report',
  provider: {
    '@type': 'Organization',
    name: 'Memoria Studio',
    url: 'https://memoriastudio.net',
  },
  description:
    "Weekly creative direction and ideations tailored to your channel and what's trending.",
};

const services = [
  {
    name: 'Channel Analysis',
    description:
      'We study your style and performance patterns to ensure every idea aligns with your brand DNA',
  },
  {
    name: 'Tiered Concept Development',
    description:
      'Our team crafts core ideations and maps them into Easy, Medium, and Advanced paths.',
  },
  {
    name: 'Interactive Hub Access',
    description:
      'Access your report through your Personal Dashboard, designed for instant review and execution.',
  },
];
---

<Layout
  description="From the minds at Memoria Studio — discover how we build, scale, and share creative systems."
  title="Inspirational · Memoria Wider"
  canonical="/inspirational"
>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <section class="px-4 md:pb-12">
    <div class="mx-auto max-w-2xl lg:max-w-7xl lg:px-4">
      <div class="grid gap-12 pb-20 lg:grid-cols-2 lg:gap-12">
        <img
          class="mx-auto h-[490px] w-full rounded-3xl object-cover md:h-[800px]"
          width="576"
          height="800"
          src="/assets/IMG_2121.jpg"
          alt="Our experts working together"
        />
        <div class="flex flex-col gap-10">
          <div class="space-y-8 sm:space-y-6 text-center md:text-left">
            <h1 class="text-4xl font-semibold tracking-tight sm:text-5xl">Inspirational Report</h1>
            <h2 class="text-xl font-medium tracking-tight sm:text-xl md:text-2xl">
              Fresh Inspiration — Tailored to your voice, fueled by trends.
            </h2>
            <div class="space-y-6">
              <p class="text-base text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
                Eliminate creative blocks. The Inspirational Report delivers weekly,
                precision-engineered ideations tailored to your niche. Each idea includes Easy,
                Medium, and Advanced execution paths, allowing you to scale your content while
                staying in sync with market trends and your unique DNA.
              </p>
              <h2 class="text-3xl font-medium tracking-tight sm:text-xl">
                What You’ll Get Every Week: The 6 Pillars
              </h2>

              <Inspiratiogrid />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div>
      <PricingInspirational />
      <Services services={services} title="How It Works: The Methodology" />
    </div>
  </section>
</Layout>
