---
import Layout from '../layouts/Layout.astro';
import ServiceTable from '../components/pricing/ServiceTable.astro';
import Faq from '../components/home/faq.astro';
import Cta from '../components/home/Cta.astro';
import benefitsHome from '../docs/home/benefits.js';
import Bento12 from '../components/home/Bento12.astro';
import '../styles/style.css';
import ServicesHome from '../components/home/ServicesHome.astro';
import CallToAction from '../components/home/CallToAction.astro';
import GradientText from '../components/ui/GradientText.astro';
---

<Layout
  description="From the minds at Memoria Studio — discover how we build, scale, and share creative systems."
  title="Home · Memoria Wider"
>
  <!--Inicio Hero-->
  <section class="relative mx-auto h-full max-w-7xl p-4 md:h-[800px]">
    <div class="flex h-full flex-col-reverse items-center md:flex-row">
      <img
        src="/assets/fondo-headers.png"
        class="inset-0 z-[-10] hidden w-full opacity-50 invert dark:invert-0 md:absolute md:block md:translate-x-[40px] md:translate-y-[-210px] md:scale-x-[-1]"
        alt=""
      />
      <div class="flex max-w-xl flex-col items-center justify-center gap-4 sm:gap-6 md:items-start">
        <img
          class="absolute z-[-10] hidden w-[330px] translate-x-[-10px] translate-y-[-140px] md:block"
          src="/assets/img-text-header.png "
          alt="Memoria Wider"
        />
        <h1
          class="text-center font-Satoshi text-5xl font-semibold [text-shadow:0_2px_4px_rgba(0,0,0,0.9)] md:text-left lg:text-6xl"
        >
          Inspiration for What Comes Next
        </h1>

        <p
          class="mt-4 text-center text-lg [text-shadow:0_1px_3px_rgba(0,0,0,0.5)] sm:text-xl md:text-left"
        >
          Find the spark to build what’s next — and make it real with Memoria Wider.
        </p>
        <a href="/inspirational" class="btn-53 inline-block w-48 bg-memoria/70 dark:bg-memoria/70">
          <div class="original bg-memoria/40 dark:bg-memoria/70">Get Inspired</div>
          <div class="letters">
            <span>G</span>
            <span>E</span>
            <span>T</span>
            <span>&nbsp;</span>
            <span>I</span>
            <span>N</span>
            <span>S</span>
            <span>P</span>
            <span>I</span>
            <span>R</span>
            <span>E</span>
            <span>D</span>
          </div>
        </a>
      </div>
      <div>
        <img src="/assets/Foco.png" alt="Memoria Wider" width="800" height="800" />
      </div>
    </div>
  </section>
  <section class="relative mx-auto h-[800px] max-w-7xl">
    <div class="flex h-full items-center">
      <img
        src="/assets/fondo-headers.png"
        class="absolute inset-0 z-[-10] w-full opacity-50 invert dark:invert-0 md:translate-x-[40px] md:translate-y-[-210px] md:scale-x-[-1]"
        alt=""
      />

      <div class="max-w-xl flex-col items-start gap-4 sm:gap-6">
        <img
          class="absolute z-[-10] w-[330px] translate-x-[-10px]"
          src="/assets/img-text-header.png "
          alt="Memoria Wider"
        />
        <h1
          class="font-Satoshi text-4xl font-semibold [text-shadow:0_2px_4px_rgba(0,0,0,0.9)] sm:text-5xl lg:text-6xl"
        >
          Inspiration for What Comes Next
        </h1>

        <p class="mt-4 text-lg [text-shadow:0_1px_3px_rgba(0,0,0,0.5)] sm:text-xl">
          Find the spark to build what’s next — and make it real with Memoria Wider.
        </p>
        <a href="/inspirational" class="btn-53 inline-block w-48 bg-memoria/70 dark:bg-memoria/70">
          <div class="original bg-memoria/40 dark:bg-memoria/70">Get Inspired</div>
          <div class="letters">
            <span>G</span>
            <span>E</span>
            <span>T</span>
            <span>&nbsp;</span>
            <span>I</span>
            <span>N</span>
            <span>S</span>
            <span>P</span>
            <span>I</span>
            <span>R</span>
            <span>E</span>
            <span>D</span>
          </div>
        </a>
      </div>
      <div>
        <img src="/assets/img-brain.png" alt="Memoria Wider" width="800" height="800" />
      </div>
    </div>
  </section>

  <section class="py-8">
    <a href="/contact">
      <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
        <div class="relative">
          <img
            class="h-[600px] w-full rounded-3xl object-cover"
            width="1280"
            height="600"
            src="/assets/pexels-kampus-7964658.jpg"
            alt="Hero picture"
          />

          <div class="absolute inset-0 flex flex-col items-start justify-end p-8 sm:p-12 md:p-16">
            <div class="max-w-xl flex-col items-start gap-4 sm:gap-6">
              <h1
                class="text-4xl font-medium tracking-tight text-white [text-shadow:0_2px_4px_rgba(0,0,0,0.6)] sm:text-5xl lg:text-6xl"
              >
                Inspiration for What Comes Next
              </h1>

              <p class="mt-4 text-lg text-white [text-shadow:0_1px_3px_rgba(0,0,0,0.5)] sm:text-xl">
                Find the spark to build what’s next — and make it real with Memoria Wider.
              </p>
            </div>
          </div>
        </div>
      </div>
    </a>
  </section>

  <section
    class="relative mx-auto h-[700px] max-w-7xl overflow-hidden rounded-[2.5rem] px-4 sm:px-6 lg:px-8"
  >
    <img
      src="/assets/pexels-kampus-7964658.jpg"
      alt="Creative inspiration"
      class="absolute inset-0 h-full w-full rounded-[2.5rem] object-cover px-4 sm:px-6 lg:px-8"
    />
    <div class="absolute h-full w-full bg-[#000000]/40 backdrop-blur-sm"></div>
    <div class="relative flex h-full items-center">
      <div class="mx-auto max-w-5xl px-6 text-center text-white">
        <h1 class="text-4xl font-extrabold tracking-tight sm:text-6xl">
          Inspiration for
          <span class="text-indigo-400 block">What Comes Next</span>
        </h1>

        <p class="mt-6 text-lg text-white/80 sm:text-xl">
          Find the spark to build what’s next — and make it real with
          <span class="font-semibold text-white">Memoria Wider</span>.
        </p>

        <div class="mt-10 flex justify-center">
          <a
            href="/contact"
            class="inline-flex items-center gap-2 rounded-full px-10 py-4 text-lg font-semibold text-white transition-all hover:scale-105"
          >
            Ignite your ideas
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- <BenefitsReutilizable title="The Results You're Looking For..." items={benefitsHome} /> -->
  <Bento12 items={benefitsHome} />

  <ServicesHome />
  <!-- <ServiceTable /> -->

  <Faq />

  <CallToAction />
  <!-- <Cta /> -->
</Layout>
