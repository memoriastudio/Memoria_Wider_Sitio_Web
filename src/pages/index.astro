---
import Layout from '../layouts/Layout.astro';
import Faq from '../components/home/faq.astro';
import benefitsHome from '../docs/home/benefits.js';
import Bento12 from '../components/home/Bento12.astro';
import '../styles/style.css';
import ServicesHome from '../components/home/ServicesHome.astro';
import CallToAction from '../components/home/CallToAction.astro';
import BtnGetInspiration from '../components/ui/BtnGetInspiration.astro';

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'Memoria Wider',
  url: Astro.site?.toString() || 'https://memoriastudio.net',
  description: 'Inspiration for What Comes Next — Build, scale, and share creative systems.',
};
---

<Layout
  description="From the minds at Memoria Studio — discover how we build, scale, and share creative systems."
  title="Home · Memoria Wider"
  canonical="/"
>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <section class="relative mx-auto h-full max-w-7xl p-4 md:h-[800px] md:px-12">
    <div class="flex h-full flex-col-reverse items-center md:flex-row">
      <img
        src="/assets/fondo-headers.png"
        class="inset-0 z-[-10] hidden w-full opacity-60 invert dark:opacity-20 dark:invert-0 md:absolute md:block lg:translate-x-[40px] lg:translate-y-[-210px] lg:scale-x-[-1]"
        alt="Background abstract pattern"
        width="1920"
        height="1080"
      />
      <div class="flex max-w-xl flex-col items-center justify-center gap-4 sm:gap-6 md:items-start">
        <img
          class="absolute z-[-10] hidden w-[330px] translate-x-[-10px] translate-y-[-140px] md:block"
          src="/assets/img-text-header.png "
          alt="Memoria Wider"
        />
        <h1
          class="text-center font-Satoshi text-5xl font-semibold [text-shadow:0_2px_4px_rgba(0,0,0,0.9)] md:text-left lg:text-6xl"
        >
          Inspiration for What Comes Next
        </h1>

        <p
          class="mt-4 text-center text-lg [text-shadow:0_1px_3px_rgba(0,0,0,0.5)] sm:text-xl md:text-left"
        >
          Find the spark to build what’s next — and make it real with Memoria Wider.
        </p>
        <BtnGetInspiration href="/inspirational" />
      </div>
      <div>
        <img src="/assets/Foco.png" alt="Memoria Wider" width="800" height="800" />
      </div>
    </div>
    <div class="container_mouse">
      <span class="mouse-btn">
        <span class="mouse-scroll"></span>
      </span>
    </div>
  </section>

  <Bento12 items={benefitsHome} />
  <ServicesHome />
  <Faq />
  <CallToAction />
</Layout>
