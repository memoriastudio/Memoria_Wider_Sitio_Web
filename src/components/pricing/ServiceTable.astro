---
const service = [
  {
    name: 'Inspirational Report',
    description: 'Turn creative insights into actionable direction for your next project with the Inspirational Report.',
    isFlagged: true,
    action: 'Learn More',
    href: '/inspirational', 
    features: [],
    // IMAGEN AÑADIDA
    imageSrc: '/assets/IMG_2121.jpg', 
  },
  {
    name: 'Edition',
    description: 'Where creative vision meets flawless execution — edit with impact and craft visuals that resonate.',
    isFlagged: true,
    action: 'Learn More',
    href: '/edition', 
    features: [],
    // IMAGEN AÑADIDA
    imageSrc: '/assets/pexels-muhammed-cetinkaya-470437330-17115912.jpg', 
  }
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
    <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">The Services You Need</h2>
    <div class="-mt-8 grid gap-8 lg:mt-0 lg:grid-cols-2">

      {
        service.map((item) => (
          <div
            class:list={[
              'relative flex flex-col gap-8 rounded-3xl p-8 group transition-all duration-300', // AÑADIDO: 'group' y 'transition-all duration-300'
              item.isFlagged && 'bg-primary-500/10 dark:bg-primary-400/10 hover:bg-primary-500/20 dark:hover:bg-primary-400/20', // AÑADIDO: Efecto hover en el fondo
            ]}
          >
            <div class="flex-1">
              
              <h2 class="text-xl font-medium">{item.name}</h2>
              
              {/* IMAGEN DE TAMAÑO FIJO CON EFECTO HOVER */}
              {item.imageSrc && (
                <img
                  src={item.imageSrc}
                  alt={`Imagen representativa de ${item.name}`}
                  class="mt-4 mb-6 w-full h-48 object-cover rounded-xl transition-transform duration-300 group-hover:scale-[1.02]" // AÑADIDO: 'transition-transform duration-300' y 'group-hover:scale-[1.02]'
                  width="500"
                  height="192" 
                />
              )}

              <p class="mt-4 flex items-baseline">
                <span class="text-4xl font-medium tracking-tight">{item.price}</span>
                <span class="text-primary-950/70 dark:text-primary-200/70 ml-1 text-sm font-medium">
                  {item.periodicity}
                </span>
              </p>
              
              <p class="text-primary-950/70 dark:text-primary-200/70 mt-6">{item.description}</p>
              
              <ul role="list" class="mt-6 space-y-6">
                {item.features.map((feature) => (
                  <li class="flex gap-3">
                    <svg
                      class="text-primary-600 dark:text-primary-400 h-6 w-6 flex-shrink-0"
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      aria-hidden="true"
                    >
                      <path d="M12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22ZM11.0026 16L18.0737 8.92893L16.6595 7.51472L11.0026 13.1716L8.17421 10.3431L6.75999 11.7574L11.0026 16Z" />
                    </svg>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
            <a
              href={item.href} class="bg-primary-600 dark:bg-primary-400 hover:bg-primary-700 dark:hover:bg-primary-300 focus-visible:outline-primary-600 dark:focus-visible:outline-primary-400 dark:text-primary-950 inline-flex w-full items-center justify-center rounded-full border border-transparent px-5 py-3 text-base font-medium text-white transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
            >
              {item.action}
            </a>
          </div>
        ))
      }
    </div>
  </div>
  </div>
</section>
