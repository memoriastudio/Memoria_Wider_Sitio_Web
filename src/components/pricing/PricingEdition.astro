---
const pricing_ins = [
  {
    name: 'Basic',
    description: 'Essential polish for high-performance content.',
    periodicity: '/video',
    price: '$350',
    action: 'Purchase',
    href: 'https://buy.stripe.com/6oU8wO55Hcuz5cs7Ly9sk0D',
    features: [
      '60min Footage Limit (10GB)',
      'Professional Narrative Cuts',
      'Basic Color Correction',
      '1 Revision Round',
    ],
  },
  {
    name: 'Plus',
    description: 'Engineered for maximum engagement and brand growth.',
    isFlagged: true,
    periodicity: '/video',
    price: '$450',
    action: 'Purchase',
    href: 'https://buy.stripe.com/3cI14mbu50LRgVad5S9sk0E',
    features: [
      '120min Footage Limit (20GB)',
      'Advanced Sound & Motion Design',
      'Custom Thumbnail Creation',
      '2 Revision Rounds',
    ],
    isPopular: true,
  },
  {
    name: 'Pro',
    description: 'Dedicated production infrastructure for content engines.',
    periodicity: '',
    price: 'Custom',
    action: 'Contact Us',
    href: '/contact',
    features: [
      'Unlimited Footage Volume',
      'Dedicated Video Editor',
      '48h Priority Turnaround',
      'Priority Access to Consultations',
    ],
  },
];
---

<section class="relative py-32 sm:pb-20 sm:pt-40">
  <div
    class="pointer-events-none absolute inset-x-0 inset-y-[40px] flex items-start justify-center md:inset-y-[90px]"
  >
    <h2
      class="select-none font-bbh text-4xl font-extrabold text-primary-600 dark:text-white/20 md:text-[160px] md:tracking-tight md:blur-sm"
    >
      Pricing
    </h2>
  </div>
  <div class="relative mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="-mt-8 grid gap-8 lg:mt-0 lg:grid-cols-3">
      {
        pricing_ins.map((item) => (
          <div
            class:list={[
              'relative flex flex-col gap-8 rounded-3xl p-8',
              'backdrop-blur-xl',
              'shadow-xl',
              'transition-all duration-300',
              'hover:scale-[1.02] hover:shadow-xl hover:cursor-pointer',
              (item.isPopular && 'border-2 border-[#A635FF]') || 'border border-white/10',
              (item.isFlagged && 'bg-primary-700/10 dark:bg-primary-400/10') ||
                'bg-primary-400/10 dark:bg-primary-800/10',
            ]}
          >
            {item.isPopular && (
              <span class="absolute -top-4 right-8 z-10 rounded-full border border-white/10 bg-primary-950/80 px-4 py-1 text-sm text-white backdrop-blur-md">
                Most Popular
              </span>
            )}
            <div class="flex-1">
              <h2 class="text-xl font-medium dark:text-white">{item.name}</h2>

              <p class="mt-4 flex items-baseline">
                <span class="text-4xl font-medium tracking-tight  dark:text-white">
                  {item.price}
                </span>
                <span class="ml-1 text-sm font-medium  dark:text-white/60">{item.periodicity}</span>
              </p>

              <p class="mt-6  dark:text-white/60">{item.description}</p>

              <ul role="list" class="mt-6 space-y-6">
                {item.features.map((feature) => (
                  <li class="flex gap-3  dark:text-white/70">
                    <svg
                      class="h-6 w-6 flex-shrink-0  dark:text-white/60"
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      aria-hidden="true"
                    >
                      <path d="M12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22ZM11.0026 16L18.0737 8.92893L16.6595 7.51472L11.0026 13.1716L8.17421 10.3431L6.75999 11.7574L11.0026 16Z" />
                    </svg>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
            <a
              href={item.href}
              target="_blank"
              class:list={[
                'inline-flex w-full items-center justify-center rounded-full border px-5 py-3 text-base font-medium transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2',
                item.price === 'Custom'
                  ? 'border-primary-600 text-primary-600 hover:bg-primary-50 dark:border-primary-400 dark:text-primary-400 dark:hover:bg-primary-900/10'
                  : 'border-transparent bg-primary-600 text-white hover:bg-primary-700 focus-visible:outline-primary-600 dark:bg-primary-400 dark:text-primary-950 dark:hover:bg-primary-300 dark:focus-visible:outline-primary-400',
              ]}
            >
              {item.action}
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>

