---
interface Item {
  name: string;
  description: string;
  colorClass: string;
}

const { items } = Astro.props as { items: Item[] };
import '../../styles/style.css';
---

<section class="py-24">
  <div class="mx-auto max-w-7xl px-6">
    <div
      class="grid
        grid-cols-1
        gap-4
        md:auto-rows-[160px]
        md:grid-cols-6
        md:grid-rows-5"
    >
      <!-- 1 -->
      <div class={`card card-sm md:col-start-1 md:row-start-1 ${items[0].colorClass}`}>
        <h3 class="text-xl font-semibold">{items[0].name}</h3>
        <p class="opacity-80">{items[0].description}</p>
      </div>

      <!-- 2 -->
      <div
        class={`card card-md md:col-start-2 md:col-span-2 md:row-start-1 ${items[1].colorClass}`}
      >
        <h3 class="text-2xl font-semibold">{items[1].name}</h3>
        <p class="opacity-80">{items[1].description}</p>
      </div>

      <!-- 3 -->
      <div class={`card card-sm md:col-start-4 md:row-start-1 ${items[2].colorClass}`}>
        <h3 class="text-xl font-semibold">{items[2].name}</h3>
        <p class="opacity-80">{items[2].description}</p>
      </div>

      <!-- 4 -->
      <div
        class={`card card-lg md:col-start-5 md:col-span-2 md:row-start-1 ${items[3].colorClass}`}
      >
        <h3 class="text-4xl font-semibold">{items[3].name}</h3>
        <p class="opacity-80">{items[3].description}</p>
      </div>

      <!-- 5 -->
      <div
        class={`card card-md md:col-start-1 md:row-start-2 md:row-span-2 ${items[4].colorClass}`}
      >
        <h3 class="text-2xl font-semibold">{items[4].name}</h3>
        <p class="opacity-80">{items[4].description}</p>
      </div>

      <!-- 6 -->
      <div class={`card card-sm md:col-start-2 md:row-start-2 ${items[5].colorClass}`}>
        <h3 class="text-xl font-semibold">{items[5].name}</h3>
        <p class="opacity-80">{items[5].description}</p>
      </div>

      <!-- 7 -->
      <div class={`card card-sm md:col-start-3 md:row-start-2 ${items[6].colorClass}`}>
        <h3 class="text-xl font-semibold">{items[6].name}</h3>
        <p class="opacity-80">{items[6].description}</p>
      </div>

      <!-- 8 – LOGO CENTRAL -->
      <div
        class={`
          md:col-start-2 md:col-span-3
          md:row-start-3 md:row-span-2
          flex items-center justify-center
          text-center
          card-radial
        `}
      >
        <!-- Logo (cambia según el tema) -->
        <img
          src="/assets/logo-black.png"
          :src="$store.theme.isDark ? '/assets/logo-light.png' : '/assets/logo-black.png'"
          alt="Logo Memoria Wider"
          class="h-[390px] w-[390px] object-contain"
        />
      </div>

      <!-- 9 -->
      <div
        class={`card card-md md:col-start-5 md:col-span-2 md:row-start-2 md:row-span-2 ${items[7].colorClass}`}
      >
        <h3 class="text-3xl font-semibold">{items[7].name}</h3>
        <p class="opacity-80">{items[7].description}</p>
      </div>

      <!-- 10 -->
      <div class={`card card-sm md:col-start-1 md:row-start-4 ${items[8].colorClass}`}>
        <h3 class="text-xl font-semibold">{items[8].name}</h3>
        <p class="opacity-80">{items[8].description}</p>
      </div>

      <!-- 11 -->
      <div
        class={`card card-md md:col-start-2 md:col-span-2 md:row-start-5 ${items[9].colorClass}`}
      >
        <h3 class="text-2xl font-semibold">{items[9].name}</h3>
        <p class="opacity-80">{items[9].description}</p>
      </div>

      <!-- 12 -->
      <div class={`card card-sm md:col-start-4 md:row-start-5 ${items[10].colorClass}`}>
        <h3 class="text-xl font-semibold">{items[10].name}</h3>
        <p class="opacity-80">{items[10].description}</p>
      </div>

      <!-- 13 -->
      <div
        class={`card card-lg md:col-start-5 md:col-span-2 md:row-start-4 md:row-span-2 ${items[11].colorClass}`}
      >
        <h3 class="text-4xl font-semibold">{items[11].name}</h3>
        <p class="opacity-80">{items[11].description}</p>
      </div>
    </div>
  </div>
</section>
