---

<section class="py-8">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">The Results You're Looking For...</h2>
      
      <div class="columns-1 sm:columns-2 lg:columns-4 gap-4">
        {
          benefits.map((service) => (
            <div 
              class:list={[
                // APLICACIÓN DE LA CLASE DE COLOR DINÁMICA
                service.colorClass, 
                // Clase de hover dinámica
                service.colorClass.replace('/[0.05]', '/[0.10]').replace('/[0.10]', '/[0.15]').replace('/[0.15]', '/[0.20]').replace('/[0.20]', '/[0.25]'),
                
                // Clases de estilo y hover de la tarjeta
                'flex flex-col gap-4 rounded-xl p-4 shadow-md',
                'transition duration-500 ease-out will-change-transform',
                'hover:scale-[1.03] hover:shadow-lg', 
                // CLASES CLAVE PARA COLUMNAS
                'break-inside-avoid-column mb-4',
              ]}
            >
              <div class="flex flex-col">
                <h3 class="text-xl font-medium">{service.name}</h3>
                <p class="text-primary-950/70 dark:text-primary-200/70 text-sm mt-2">
                  {service.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>



